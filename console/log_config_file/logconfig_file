
[logger_root]
handlers=root
level=WARNING

[handler_root]
class=StreamHandler
level=WARNING
args=(sys.stdout,)

[handler_stdout]
class=StreamHandler
args=(sys.stdout,)
#formatter=timed

[formatter_timed]
format=%(asctime)s - %(message)s

[formatter_debug]
format=%(name)s %(levelname)s - %(message)s

# ====== The following are enabled by default ======
# ======= Section for gui log ======
[logger_gui log]
handlers=gui log
qualname=gui log
level=INFO

[handler_gui log]
class=FileHandler
#formatter=timed
args=(os.devnull, 'a')
#args=('gui_log.pyusecase', 'a')

