
[logger_root]
handlers=root
level=ERROR

[handler_root]
class=StreamHandler
level=ERROR
args=(sys.stdout,)

[handler_stdout]
class=StreamHandler
args=(sys.stdout,)
#formatter=timed

[formatter_timed]
format=%(asctime)s - %(message)s

[formatter_debug]
format=%(name)s %(levelname)s - %(message)s

# ====== The following are enabled by default ======
# ======= Section for gui log ======
[logger_gui log]
handlers=stdout
qualname=gui log
level=INFO

# ======= Section for usecase replay log ======
[logger_usecase replay log]
handlers=stdout
qualname=usecase replay log
level=INFO

# ====== The following are disabled by default ======
# ======= Section for SWT structure ======
[logger_SWT structure]
handlers=SWT structure
qualname=SWT structure
level=DEBUG

[handler_SWT structure]
class=FileHandler
#formatter=debug
args=(os.devnull, 'a')
args=('swtstructure.pyusecase', 'a')

